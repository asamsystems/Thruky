    <div class="panel panel-primary">
      <div class="panel-heading">
        <h5 class="panel-title text-center" >[% infoBoxTitle %]</h5>
      </div>
    <div class="panel-body">
      <div class=row>
        <div class=col-xs-4>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h5 class="panel-title text-center">Current State</h5>
            </div>
            <div class="panel-body">
            [% PROCESS _infobox.tt %]
            [% PROCESS _help.tt topic = "trends" %]
            </div>
          </div>
        </div>
          <div class=col-xs-4>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h5 class="panel-title text-center">
              Step 2: Select [% IF input == 'gethost' %]Host[% ELSIF input == 'getservice' %]Service[% END %]
              </h5>
            </div>
            <div class="panel-body">
              <form method="get" action="trends.cgi">
              <input type='hidden' name='input' value='getoptions'>
              <div class="form-group">
                <label>Host:&nbsp;</label>
                <select class="form-control btn-sm" name="[% IF input == 'gethost' %]host[% ELSIF input == 'getservice' %]service[% END %]">
            [% FOR d = data %]
            <option value="[% d | html %]">[% d | html %]</option>
            [% END %]
                </select>
                </div>
                <div class="form-group">
                 <button type="submit" class="btn btn-default btn-sm">Continue to Step 3</button>
                 </div>
              </form>
            </div>
          </div>        
          </div>         
      </div>
    </div>
    </div>
</div>    
              
